docker init

docker build -t flask-json-testapp .
docker run -d -p 5000:8000 flask-json-testapp

docker ps
docker ps -a # to see stopped and runing containers
docker logs <id> or name

# Save Docker Image
docker save -o flask-json-testapp.tar flask-json-testapp

# Copy to the instance using Winscp

# Install Docker on System Instance (if Not Installed)
sudo yum update -y
sudo yum install docker -y
sudo service docker start
docker --version
sudo service docker status

# Load Docker image on Instance
sudo docker load < flask-json-testapp.tar

# Run on instance
sudo docker run -d -p 5000:8000 flask-json-testapp:latest
sudo docker ps
sudo docker logs -f <container_id>


# see logs on instance
sudo docker logs contatiner_name
sudo docker logs -f container_name

